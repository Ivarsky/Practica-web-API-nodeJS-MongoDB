<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p><%= __('Welcome to ') %><%= title %>
  </p>

  <h2><%= __('Advertisement list: ')%></h2>
  <% advertisements.forEach(advertisement=> { %>

    <h3>
      <%= __('Advert ')%><%= advertisement.name %> <%= __('at ')%><%= advertisement.price %> Euros
    </h3>
    <p><%= __('Tags: ') %></p>
    <ul>
      <% advertisement.tags.forEach(function(tag) { %>
        <li><%= __(tag) %></li>
      <% }); %>
    </ul>
    <div>
      <img src="/images/anuncios/<%= advertisement.photo %>">
    </div>
    <% }) %>


</body>

</html>